{
  "name": "resume-tailor-saas",
  "version": "1.0.0",
  "private": true,
  "description": "A production-style Resume Tailoring SaaS built on a Google-only stack",
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "./scripts/dev-backend.sh",
    "dev:all": "./scripts/dev-all.sh",
    "dev:documents-api": "pnpm --filter documents-api dev",
    "dev:generate-api": "pnpm --filter generate-api dev",
    "emulators": "firebase emulators:start --project demo-project --import ./firebase-data --export-on-exit ./firebase-data",
    "build": "pnpm -r build",
    "build:all": "pnpm -r build",
    "build:frontend": "pnpm --filter frontend build",
    "deploy:frontend": "pnpm build:frontend && firebase deploy --only hosting",
    "setup:backend": "./scripts/setup-backend-secrets.sh",
    "deploy:backend": "./scripts/deploy-backend.sh",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "firebase-tools": "^13.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
